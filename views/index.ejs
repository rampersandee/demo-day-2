<!doctype html>
<html>

<head>
    <title>Find Me Food</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="font-awesome.min.css">
    <link rel="stylesheet" href="style.css">
</head>
<style>
    #foodEmoji {
        transition: transform 0.5s, opacity 1.5s;
    }
</style>
<body>
    <div class="container">

        <div class="jumbotron text-center">
            <h1>Find Me Food</h1>
            <h2>Let's find you some food.</h2>

            <h3 id='foodEmoji'>üçû</h3>

            <a href="/login" class="btn btn-primary"><span class="fa fa-user"></span> Login</a>
            <a href="/signup" class="btn btn-primary"><span class="fa fa-user"></span> Signup</a>

            <p><span class="fa fa-map-marker"></span> We use your location to find the closest and cheapest stores near
                you</p>
        </div>

    </div>
</body>
<script>
    const foodEmojis = ['ü•´', 'ü•ö', 'ü•ë', 'ü•î', 'üçû']; // Array of food emojis
    let currentIndex = 0; // Current index of the emoji array

    function cycleFoodEmojis() {
    const foodEmojiElement = document.getElementById('foodEmoji');
    if (foodEmojiElement) {
        foodEmojiElement.style.opacity = '0'; // Set opacity to 0

        setTimeout(() => {
            foodEmojiElement.textContent = foodEmojis[currentIndex]; // Update the emoji
            foodEmojiElement.style.opacity = '1'; // Set opacity to 1

            currentIndex = (currentIndex + 1) % foodEmojis.length; // Increment the index
            setTimeout(cycleFoodEmojis, 1500); // Repeat after 1500 milliseconds
        }, 500); // Delay before updating the emoji
    }
}

cycleFoodEmojis(); // Start the cycle // Start the cycle
</script>

</html>